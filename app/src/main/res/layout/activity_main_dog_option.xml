<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityDogOption">

    <View
        android:id="@+id/vw_fondodogoption"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:textSize="35sp"
        android:textColor="@color/orange_title"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="@+id/vw_fondodogoption"
        app:layout_constraintTop_toTopOf="@id/vw_fondodogoption"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friend"
        android:textSize="35sp"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_search"
        app:layout_constraintTop_toTopOf="@id/vw_fondodogoption"
        android:layout_marginTop="50dp"
        android:layout_marginStart="115dp"/>

    <ImageView
        android:id="@+id/iv_huella"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/huellita"
        app:layout_constraintTop_toTopOf="@+id/tv_friend"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_flecha"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonform3"
        android:paddingEnd="20dp"
        app:drawableEndCompat="@drawable/icon_back"
        app:layout_constraintBottom_toBottomOf="@id/vw_fondodogoption"
        app:layout_constraintEnd_toEndOf="@id/vw_fondodogoption"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="35dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_volver"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonform"
        android:text="Volver"
        android:textAlignment="textStart"
        android:paddingStart="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/vw_fondodogoption"
        app:layout_constraintStart_toStartOf="@+id/vw_fondodogoption"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="35dp"
        tools:ignore="RtlCompat,RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>